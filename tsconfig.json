{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/components": ["./components"],
      "@/components/*": ["./components/*"],
      "@/hooks": ["./lib/hooks"],
      "@/hooks/*": ["./lib/hooks/*"],
      "@/services": ["./lib/services"],
      "@/services/*": ["./lib/services/*"],
      "@/types": ["./lib/types"],
      "@/types/*": ["./lib/types/*"],
      "@/constants": ["./lib/constants"],
      "@/constants/*": ["./lib/constants/*"],
      "@/database": ["./lib/database"],
      "@/database/*": ["./lib/database/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
